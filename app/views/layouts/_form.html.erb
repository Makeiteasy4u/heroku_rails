
<% if @post.errors.any? %>
<h2>error when create a Post, see the errors bellow</h2>
	<ul>
	<% @post.errors.full_messages.each do |msg| %>
		<li>
		<%= msg %>
		</li>
	<% end %>	
	</ul>	
<% end %>


<%= form_for @post do |f| %>
	<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
	</p>
	<p>
	<%= f.label :description %><br>
	<%= f.text_area :description %>
	</p>
	<%= f.submit %>
		
<% end %>
<p>
<%= link_to"Back to all posts", posts_path(@post) %>	
</p>